Fn[joiner, arr, $:
    ~> arr (reduce) [
        @:Obj[
            @:Arr[joiner, @:~> joiner],
            :Arr[str, '']
        ],
        :Fn[context, item, i, >$: [
            ~> context str += [@:
                ~> i (then-else) [@:~> context joiner, '']
                + [@:Str[@:~> item]]
            ],
            ~> context
        ]]
    ]
    str
]
